<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/spy3">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

        <com.HK.dzbly.utils.drawing.LevelHew
                android:id="@+id/level_h"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content" />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/level_h"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

            <com.HK.dzbly.utils.drawing.LevelView
                    android:id="@+id/level_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <com.HK.dzbly.utils.drawing.LevelVew
                    android:id="@+id/level_v"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="30dp">

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

            <TextView
                    android:id="@+id/tvv_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:text="vert"
                    android:textColor="@color/black"
                    android:textSize="40sp" />

            <TextView
                    android:id="@+id/tvl_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvv_vertical"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:text="@string/vertical"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="0.5">

            <TextView
                    android:id="@+id/tvv_horz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:text="horiz"
                    android:textColor="@color/black"
                    android:textSize="40sp" />

            <TextView
                    android:id="@+id/tvl_horz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvv_horz"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:text="@string/horizontal"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
