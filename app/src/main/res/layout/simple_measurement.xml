<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">

    <TextView
            android:id="@+id/mexplain"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5.8"
            android:background="@drawable/boder"
            android:scrollbars="vertical"
            android:textColor="@color/white" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            >

        <TextView
                android:id="@+id/re_measurement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/boder"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/Re_measurement"
                android:textColor="@color/white"
                android:textSize="16sp" />

        <TextView
                android:id="@+id/locking_occurrence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/boder"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/Lock_the_left_visual_occurrence"
                android:textColor="@color/white"
                android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        <TextView
                android:id="@+id/Compass_settings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/boder"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/Compass_settings"
                android:textColor="@color/white"
                android:textSize="16sp" />

        <TextView
                android:id="@+id/msave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/boder"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/Save"
                android:textColor="@color/white"
                android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
