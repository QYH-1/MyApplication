<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="vertical"
        tools:ignore="MissingDefaultResource">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

        <Button
                android:id="@+id/btnCaptureRaw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_bottom_camera_bg"
                android:text="@string/Photograph" />

        <Button
                android:id="@+id/btnCaptureAndClip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_bottom_camera_bg"
                android:text="@string/Photograph_cut" />

        <Button
                android:id="@+id/btnAlbumAndClip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_bottom_camera_bg"
                android:text="@string/Open_photo_album" />

        <Button
                android:id="@+id/btnCaptureVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_bottom_camera_bg"
                android:text="@string/Record_video" />

        <ImageView
                android:id="@+id/ivResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="30dp"
                android:scaleType="center" />

        <VideoView
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:visibility="gone" />

        <Button
                android:id="@+id/btnCapturesave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_bottom_camera_bg"
                android:text="@string/Save" />
    </LinearLayout>


</ScrollView>