<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/blue"
              android:orientation="vertical"
              android:focusableInTouchMode="false"
>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/text_gray"
            >
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_radio_button_unchecked_black_24dp"
                android:layout_weight="3"
        />
        <TextView
                android:id="@+id/jgcj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="激光测距"
                android:gravity="center"
                android:textSize="20sp"
                android:focusable="false"
                android:clickable="true"
                android:textColor="@color/text_clours_selector"
                android:layout_weight="1"
        />
        <TextView
                android:id="@+id/lpsz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="罗盘设置"
                android:gravity="center"
                android:textSize="20sp"
                android:clickable="true"
                android:textColor="@color/text_clours_selector"
                android:layout_weight="1"
        />
        <TextView
            android:id="@+id/sjgl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数据管理"
            android:gravity="center"
            android:textSize="20sp"
            android:clickable="true"
            android:textColor="@color/text_clours_selector"
            android:layout_weight="1"
    />
    </LinearLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:background="@color/black"
            >
        <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="@color/black"
        >
            <com.HK.dzbly.utils.CompassView
                    android:layout_marginLeft="30dp"
                    android:id="@+id/activity_compass_compassview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black"/>

        </RelativeLayout>
        <Button
                android:layout_marginTop="50dp"
                android:layout_width="5dp"
                android:layout_height="230dp"
                android:background="@drawable/border_line_icon"
                android:layout_marginLeft="310dp"
        />
        <TextView
                android:id="@+id/elevation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="150dp"
                android:rotation="90"
                android:text="仰角0.08°"
                android:textColor="@color/white"
                />
        <Button
                android:layout_width="260dp"
                android:layout_height="5dp"
                android:background="@drawable/border_line_icon"
                android:layout_marginTop="300dp"
                android:layout_marginLeft="40dp"
        />
        <TextView
                android:id="@+id/roll_angle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="310dp"
                android:layout_marginLeft="140dp"
                android:text="横滚角0.29°"
                android:textSize="14dp"
                android:textColor="@color/white"
        />
    </RelativeLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            >
        <CheckBox
                android:id="@+id/occurrence_survey"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:text="产状测量:"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_weight="1"

        />

        <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:showText="true"
                android:switchTextAppearance="@style/SwitchTheme"
                android:textOff="普通测量"
                android:textOn="简易测量"
        />
        </LinearLayout>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="125dp"
        />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="重新测量"
                    android:clickable="true"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_weight="1"
            />
            <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="锁定左侧视产状"
                    android:clickable="true"
                    android:textSize="16sp"
                    android:layout_weight="1"
                />
        </LinearLayout>
        <TextView
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="保存"
                android:clickable="true"
                android:textSize="16sp"
            />
</LinearLayout>
